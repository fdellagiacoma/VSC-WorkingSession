{
  "inputs": [
      {
          "default": "",
          "description": "Some prompt",
          "id": "some_prompt",
          "type": "promptString",

      },
  ],
  "tasks": [
      {
          "command": "echo hello world",
          "label": "greetings",
          "type": "shell",
          "icon": {
              "color": "terminal.ansiMagenta",
              "id": "bell"
          }
      },
      {
        "command": "echo ${input:some_prompt}",
        "label": "greetings",
        "type": "shell",
        "icon": {
          "color": "terminal.ansiMagenta",
          "id": "bell"
        }},
      {
          "command": "env.bat",
          "label": "source env variables",
          "type": "shell",
          "icon": {
              "color": "terminal.ansiBlue",
              "id": "debug-stackframe-focused"
          },
          "windows":{"command":"env.bat"},
          "linux":{"command":"source env.sh"},

          "presentation": {
              "close": false,
              "panel": "shared"
          },
          "options": {"cwd": "${workspaceFolder}"},
          "isBackground": true

      },
      {
          "label": "start working folder",
          "dependsOn": [
              "greetings",
              "systeminfo"
          ],
          "dependsOrder": "sequence",
          "runOptions": {
              "runOn": "folderOpen"
          },
          "problemMatcher": []
      },
      {
          "label": "autopep8 current file",
          "type": "shell",
          "command": "${config:python.formatting.autopep8Path} ",
          "args": [
              "--aggressive",
              "--in-place",
              "${file}"
          ],
          "problemMatcher": []
      },
      {
          "command": "systeminfo",
          "label": "show system info",
          "type": "shell",
          "promptOnClose": true
      },
      {
          "command": "python app.py --terms ${input:some_prompt} ",
          "label": "fibonacci",
          "type": "shell",
          "promptOnClose": true,
          "presentation": {
              "echo": false,
              "reveal": "always",
              "focus": false,
              "panel": "shared",
              "showReuseMessage": true,
              "clear": true
          }
      }
  ],
  // See https: // go.microsoft.com / fwlink /?LinkId = 733558
  // for the documentation about the tasks.json format
  "version": "2.0.0"
}
